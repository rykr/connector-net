<?xml version="1.0" encoding="utf-8"?>
<VSDataViewSupport xmlns="http://tempuri.org/VSDataViewSupport.xsd">
  <DataViews>
    <DataView name="MySQL">
      <DisplayName resource="DataView_MySQL"/>
      <StaticConnectionNode>
        <InitialDisplayName>{Root.Server} - {Root.User}</InitialDisplayName>
        <Children>
          <Selection type="Database" restrictions="{Root.Schema}">
            <SelectionNode nid="Database">
              <Icon name="Database"/>
              <Children>

                <!-- Tables node -->
                <StaticNode nid="Tables">
                  <DisplayName resource="Tables_DisplayName"/>
                  <CommandBindings>
                    <CommandBinding name="CreateTable" guid="373de743-ea17-4735-98b8-ce24d8be01a7" cmdid="258" handler="MySql.Data.VisualStudio.MySqlDataViewCommandHandler"/>
                    <CommandBinding name="NewQuery" guid="501822E1-B5AF-11d0-B4DC-00A0C91506EF" cmdid="13608" handler="884DD964-5327-461f-9F06-6484DD540F8F" />
                  </CommandBindings>
                  <Children>
                    <Selection type="Table" restrictions="null,{Database.Name},null,BASE TABLE">
                      <SelectionNode nid="Table">
                        <Icon name="Table"/>
                        <Children>
                          <Selection type="Column" restrictions="{Table.Catalog},{Table.Schema},{Table.Name}">
                            <SelectionNode>
                              <Icon name="Column"/>
                            </SelectionNode>
                          </Selection>
                        </Children>
                      </SelectionNode>
                    </Selection>
                  </Children>
                </StaticNode>

                <!-- Views node -->
                <StaticNode nid="Views">
                  <DisplayName resource="Views_DisplayName"/>
                  <CommandBindings>
                    <CommandBinding name="AddNewView" guid="373de743-ea17-4735-98b8-ce24d8be01a7" cmdid="272" handler="MySql.Data.VisualStudio.MySqlDataViewCommandHandler"/>
                    <CommandBinding name="NewQuery" guid="501822E1-B5AF-11d0-B4DC-00A0C91506EF" cmdid="13608" handler="884DD964-5327-461f-9F06-6484DD540F8F" />
                  </CommandBindings>
                  <Children>
                    <Selection type="View" restrictions="null,{Database.Name},null">
                      <SelectionNode nid="View">
                        <Icon name="View"/>
                        <Children>
                          <Selection type="ViewColumn" restrictions="null,{Database.Name},{View.Name}">
                            <SelectionNode>
                              <Icon name="Column"/>
                            </SelectionNode>
                          </Selection>
                        </Children>
                      </SelectionNode>
                    </Selection>
                  </Children>
                </StaticNode>

                <!-- Stored procedures -->
                <StaticNode nid="Procedures">
                  <DisplayName resource="SProc_DisplayName"/>
                  <CommandBindings>
                    <CommandBinding name="AddNewProcedure" guid="373de743-ea17-4735-98b8-ce24d8be01a7" cmdid="265" handler="MySql.Data.VisualStudio.MySqlDataViewCommandHandler"/>
                  </CommandBindings>
                  <Children>
                    <Selection type="Procedure" restrictions="null,{Database.Name},null,Procedure">
                      <SelectionNode nid="Procedure">
                        <Icon name="StoredProcedure"/>
                      </SelectionNode>
                    </Selection>
                  </Children>
                </StaticNode>

                <!-- Stored functions -->
                <StaticNode nid="Functions">
                  <DisplayName resource="SFunc_DisplayName"/>
                  <CommandBindings>
                    <CommandBinding name="AddNewFunction" guid="373de743-ea17-4735-98b8-ce24d8be01a7" cmdid="275" handler="MySql.Data.VisualStudio.MySqlDataViewCommandHandler"/>
                  </CommandBindings>
                  <Children>
                    <Selection type="Function" restrictions="null,{Database.Name},null,Function">
                      <SelectionNode nid="Function">
                        <Icon name="ScalarValuedFunction"/>
                      </SelectionNode>
                    </Selection>
                  </Children>
                </StaticNode>                
                
              </Children>
            </SelectionNode>
          </Selection>
        </Children>
      </StaticConnectionNode>
    </DataView>
  </DataViews>

